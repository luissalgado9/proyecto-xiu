<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/facturapps_fondo_gris"
    tools:context=".Menu">

    <Button
        android:id="@+id/button"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="246dp"
        android:background="@drawable/factuapp_btn_left_deg"
        android:gravity="right|center_vertical"
        android:paddingRight="10dp"
        android:text="Nueva venta"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/factuapp_btn_left_deg"
        android:gravity="right|center_vertical"
        android:paddingRight="10dp"
        android:text="Facturas"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="329dp"
        android:background="@drawable/factuapp_btn_left_deg"
        android:gravity="right|center_vertical"
        android:onClick="nuevocliente"
        android:paddingRight="10dp"
        android:text="Nuevo cliente"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/factuapp_btn_left_deg"
        android:gravity="right|center_vertical"
        android:paddingRight="10dp"
        android:text="Clientes"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="409dp"
        android:background="@drawable/factuapp_btn_left_deg"
        android:gravity="right|center_vertical"
        android:paddingRight="10dp"
        android:text="Nuevo artículo"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/factuapp_btn_left_deg"
        android:gravity="right|center_vertical"
        android:paddingRight="10dp"
        android:text="Artículos"
        android:textSize="12sp" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/facturapps_logo" />
</RelativeLayout>