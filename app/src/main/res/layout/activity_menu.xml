<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/facturapps_fondo_gris"
    tools:context=".Menu">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="756dp"
        android:layout_height="153dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-23dp"
        app:srcCompat="@drawable/facturapps_banner" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignRight="@+id/imageView5"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_margin="1dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="174dp"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="10dp"
        android:text="Bienvenido"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="246dp"
        android:background="@drawable/factuapp_btn_left_deg"
        android:gravity="right|center_vertical"
        android:onClick="factura"
        android:paddingRight="10dp"
        android:text="Nueva venta"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/factuapp_btn_left_deg"
        android:gravity="right|center_vertical"
        android:paddingRight="10dp"
        android:text="Facturas"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="329dp"
        android:background="@drawable/factuapp_btn_left_deg"
        android:gravity="right|center_vertical"
        android:onClick="nuevocliente"
        android:paddingRight="10dp"
        android:text="Nuevo cliente"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/factuapp_btn_left_deg"
        android:gravity="right|center_vertical"
        android:onClick="cliente"
        android:paddingRight="10dp"
        android:text="Clientes"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="409dp"
        android:background="@drawable/factuapp_btn_left_deg"
        android:gravity="right|center_vertical"
        android:onClick="nuevoarticulo"
        android:paddingRight="10dp"
        android:text="Nuevo artículo"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/factuapp_btn_left_deg"
        android:gravity="right|center_vertical"
        android:onClick="producto"
        android:paddingRight="10dp"
        android:text="Artículos"
        android:textSize="12sp" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/facturapps_logo" />

</RelativeLayout>