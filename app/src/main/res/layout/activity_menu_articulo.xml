<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/facturapps_fondo_gris"
    tools:context=".Menu_articulo">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/facturapps_logo" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="261dp"
        android:background="@drawable/editxt_round"
        android:drawableLeft="@drawable/ic_action_nom_art"
        android:ems="10"
        android:hint="Nombre de artículo"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="272dp"
        android:background="@drawable/editxt_round"
        android:drawableLeft="@drawable/ic_action_pres_art"
        android:ems="10"
        android:hint="Precio"
        android:inputType="number"
        android:text=""
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="227dp"
        android:background="@drawable/editxt_round"
        android:drawableLeft="@drawable/ic_action_dec_art"
        android:ems="10"
        android:hint="Descripción"
        android:inputType="textEmailAddress"
        android:text=""
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="182dp"
        android:background="@drawable/editxt_round"
        android:drawableLeft="@drawable/ic_action_sat_art"
        android:ems="10"
        android:hint="Clave SAT"
        android:inputType="number"
        android:text=""
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText2"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="69dp"
        android:background="@drawable/btn_round"
        android:text="Crear" />


</RelativeLayout>